@model MovieRentalApp.Models.Movies

@{
    ViewBag.Title = string.Format("{0} Details", Model.Name);
}


<h2>@Model.Name</h2>
<ul>
    <li><strong>Genre: </strong>@Model.Genre.Name</li>

    
    @if (Model.ReleaseDate.HasValue)
    {
        <li><strong>Release Date: </strong>@Model.ReleaseDate.Value.ToShortDateString()</li>
    }

    <li><strong>Date Added: </strong>@Model.DateAdded.ToShortDateString()</li>
    <li><strong>Number InStock: </strong>@Model.NumberInStock</li>
</ul>
<img alt="Uploaded Image" width="250" height="250" src="~/Images/MovieCovers/@Model.ImageURL" />

<div class="form-group">
    @Html.ActionLink("Back to List","Index")
</div>
